{{#with car}}
<h1>Edit</h1>
<div class="editForm">
    <form action="/edit/{{id}}" method="POST">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" class="formInput" value="{{name}}">
        <label for="name">Description</label>
        <textarea id="name" name="description" class="formInput">{{description}}</textarea>
        <label for="image">ImageUrl</label>
        <input type="text" id="image" name="imageUrl" class="formInput" value="{{imageUrl}}">
        <label for="price">Price</label>
        <input type="number" id="price" name="price" class="formInput" value="{{price}}">
        <input type="submit" value="Publish">
    </form>
</div>
{{/with}}