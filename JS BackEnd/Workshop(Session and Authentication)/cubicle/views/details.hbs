<h1>{{cube.name}}</h1>
<img class="cube" src="{{cube.imageUrl}}">
<div class="details">
  <p><span>Description:</span>{{cube.description}}</p>
  <p><span>Difficulty level:</span>{{cube.difficultyLevel}}</p>
  <a class="btn" href="/">Back</a>
  {{#if isOwner}}
  <a class="btn" href="/edit/{{cube.id}}">Edit</a>
  <a class="btn" href="/delete/{{cube.id}}" id="delBtn">Delete</a>
  <a class="btn" href="/details/{{cube.id}}/attach-accessory">Attach</a>
  {{/if}}
</div>
<h2>Accessories</h2>
<div class="accessories">
  {{#each cube.accessories}}
  {{> attachedAccessory}}
  {{else}}
  <h3 class="italic">This cube has no accessories yet...</h3>
  {{/each}}
</div>
<script src="../static/app.js"></script>
