<main id="edit">
    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->

     {{#if error}}
    <div>
        <div class="errorContainer">
            {{#each error}}
                <p>{{msg}}</p>
                {{/each}}
        </div>
    </div>
    {{/if}}
    <section id="edit-container">
        <div class="edit-container-info">
            <h1>Edit Game Code Offer</h1>
            <form action="/edit/{{game._id}}" method="POST">
                <label>Platform:</label>
                <select id="platform" name="platform" value="{{game.platform}}">
                    {{#each platforms}}
                    <option value="{{value}}" {{#if isSelected}}selected{{/if}}>{{label}}</option>
                    {{/each}}
                </select>
                <label>Name:</label>
                <input type="text" id="name" name="name" value="{{game.name}}">
                <label>Image:</label>
                <input type="text" id="image" name="image" value="{{game.image}}">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{game.price}}">
                <label>Genre:</label>
                <input type="text" id="genre" name="genre" value="{{game.genre}}">
                <label>Description:</label>
                <textarea id="description" name="description">{{game.description}}</textarea>
                <input type="submit" id="btn" value="EDIT"></input>
            </form>
        </div>
    </section>
</main>