<section id="catalog-section">

    <h1 class="item">
        {{item.name}}
        <div class="f-right">
            <a class="action pad-small f-left" href="/edit/{{item._id}}">Edit</a>
            <a class="action pad-small f-left" href="/delete/{{item._id}}">Delete</a>
        </div>
    </h1>
    <div class="item padded">

        <div class="layout right large">

            <div class="col">
                <img src="{{item.image}}" class="img-large">
            </div>

            <div class="content pad-med">

                <p>In category: <strong>{{item.category}}</strong></p>
                <p>{{item.description}}</p>

                <div class="align-center">
                    <div>
                        Current price: $<strong>{{item.price}}</strong>
                    </div>

                    <div>
                        {{#if item.bidder}}
                        Bid by <strong>{{bidderName}}</strong>
                        <a class="action pad-med cta" href="/details/{{item._id}}/close">Close Auction</a>
                        {{else}}
                        No bids
                        {{/if}}
                    </div>
                </div>

            </div>
        </div>

        <footer>Listed by {{fullName}}</footer>
    </div>

</section>