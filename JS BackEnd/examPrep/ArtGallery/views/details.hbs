<section id="details-page">
    <h1>Details</h1>
    <article class="details-card">

        <article class="details-card-text">
            <h2>Title:<br>{{publication.title}}</h2>
            <h3>Author: {{publication.author.username}}</h3>
            <h3>Painting technique: {{publication.paintingTech}}</h3>
            <h3>Certificate of authenticity: {{publication.certificate}}</h3>
            {{#if user}}
            <div class="buttons">
                {{#if isOwner}}
                <a href="/edit/{{publication._id}}" class="btn-edit">Edit</a>
                <a href="/delete/{{publication._id}}" class="btn-delete">Delete</a>
                {{else}}
                {{#if isShared}}
                <p class="shared-pub">You already shared this publication</p>
                {{else}}
                <a href="/details/{{publication._id}}/share" class="btn-share">Share publication</a>
                {{/if}}
                {{/if}}
            </div>
            {{/if}}
        </article>

        <article class="details-card-image">
            <img src="{{publication.image}}" alt="art-image2">
        </article>

    </article>
</section>