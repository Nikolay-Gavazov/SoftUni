<section id="viewhotelDetails">
                <div class="profile"><img src="/static/img/profile.png" alt="default user">
                    <h3>User Info:</h3>
                    <div class="flex">
                        <p>Username: </p>
                        <p>{{user.username}}</p>
                    </div>
                    <div class="flex">
                        <p>Email: </p>
                        <p>{{user.email}}</p>
                    </div>
                    <div class="flex">
                        <p>Reservations: </p>
                        {{#each user.bookedHotels}}
                        <p>
                            <span>{{name}}</span>
                        </p>
                        {{/each}}
                    </div>
                </div>
        </section>