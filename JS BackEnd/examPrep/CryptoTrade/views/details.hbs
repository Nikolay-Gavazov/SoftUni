<section id="details-info">
    <h1>Details</h1>
    <div class="coin-image">
        <img src="{{coin.image}}">
    </div>

    <div class="coin-info">
        <div class="coin-text">
            <h1 id="name">{{coin.name}}</h1>
            <h3 id="payment">Payment method: {{coin.payment}}</h3>
            <p id="price"><span>Price: ${{coin.price}}</span></p>
            <p id="description">{{coin.description}}</p>
        </div>

        <div class="product-btn">
            {{#if isOwner}}
                <div class="author">
                        <a href="/edit/{{coin._id}}" class="btn-edit">Edit</a>
                        <a href="/delete/{{coin._id}}" class="btn-delete">Delete</a>
                </div>
            {{else}}
            {{#if isBought}}
            <p class="buy-message">You already bought these crypto coins.</p>
            {{else}}
            <a href="/details/{{coin._id}}/buy" class="btn-buy">Buy</a>
            {{/if}}
            {{/if}}
        </div>
    </div>
</section>