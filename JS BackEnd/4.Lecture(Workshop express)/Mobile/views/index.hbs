<h1>Browser</h1>
<form action="/" method="GET" class="search">
  <input type="text" class="search" name="search" placeholder="Search..." value="{{query.search}}">
  <span>-</span>
  <input type="number" name="from" class="price" placeholder="Price from..." value="{{query.from}}">
  <span>-</span>
  <input type="number" name="to" class="price" placeholder="Price to..." value="{{query.to}}">
  <input type="submit" value="search">
</form>

<div id="cars" class="cars">
  {{#each cars}}
  {{> carInfo}}
  {{else}}
  <p class="nothing">No cars for sale! <a class="sell" href="/create">Sell your car!</a></p>
  {{/each}}
</div>


<script src="/static/showHide.js"></script>